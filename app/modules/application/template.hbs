<header class="container">
  <h1>Ember Sandbox</h1>
  <h3>Like a child, play your toy in the sandbox</h3>
  {{back-to-index currentRouteName}}
</header>

<div class="container">
    <button type="button" onclick={{action navgate.show navgate}} disabled={{isShow}}> 显示菜单 </button>
    <button type="button" onclick={{action navgate.hide navgate}} disabled={{isShow}}> 隐藏菜单 </button>
    <button type="button" onclick={{action navgate.toggle navgate}}> 切换菜单 </button>
</div>
<hr>


<main class="container" role="main">
  {{#if remindAuth}}
    <section class="alert alert-info" local-class="reminder">
      <div class="grid -middle -between">
        <strong>{{remindAuth}}</strong>

        <a href="https://github.com/login/oauth/authorize?client_id=93fe8b9a14b53e85c248" class="btn btn-info">
          <img src="/assets/images/github-light-32.png"> <strong>Authenticate with Github API</strong>
        </a>
      </div>
    </section>
  {{/if}}

  {{outlet}}
</main> 

{{outlet "navgate"}}
